<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

    <TextView
        android:id="@+id/event_name"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Death Star II: Star Wars Mass Battle"/>

    <TextView
        android:id="@+id/event_description"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="4dp"
        tools:text="Join Lando in leading the assault or help the Empire destroy them and salvage the
    loss of the Emperor."/>

    <TextView
        android:id="@+id/event_time"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_description"
        tools:text="Thur 9:00am-10:00am"/>

    <TextView
        android:id="@+id/event_ticket_count"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/event_description"
        android:layout_toEndOf="@id/event_time"
        android:gravity="end"
        tools:text="Available tickets: 10"/>

</RelativeLayout>